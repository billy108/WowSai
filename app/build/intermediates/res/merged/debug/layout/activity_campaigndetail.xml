<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/listGap"
        >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/BaseTitleHeight"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/TitleHeight"
                android:background="@color/titleBg"
                android:orientation="horizontal"
                >

            <ImageView
                    android:id="@+id/imageView_title_write"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/base_publish"
                    android:layout_marginLeft="15dp"
                    />

            <TextView
                    android:id="@+id/textView_title_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/campaignTitle"
                    android:textSize="@dimen/txt_size_l"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

            <ImageView
                    android:id="@+id/imageView_title_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/base_search"
                    android:layout_marginRight="15dp"
                    />

            <LinearLayout
                    android:id="@+id/linearLayout_title_cate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    >

                <TextView
                        android:id="@+id/textView_title_cate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/course_fenlei"
                        android:textSize="@dimen/txt_size_m"
                        android:textColor="@color/white"
                        android:gravity="center"
                        />

                <ImageView
                        android:id="@+id/imageView_title_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_down"
                        />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/TitleTabHeight"
                    android:orientation="horizontal"
                    >

                <TextView
                        android:id="@+id/textView_main_cnt_tab1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/txt_size_m"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="@string/campaignTab1"
                        android:background="@drawable/tab_click"
                        />

                <TextView
                    android:id="@+id/textView_main_cnt_tab2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/txt_size_m"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="@string/campaignTab2"
                    android:background="@drawable/tab_click"
                    />

                <TextView
                        android:id="@+id/textView_main_cnt_tab3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/txt_size_m"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="@string/campaignTab3"
                        android:background="@drawable/tab_click"
                        />
            </LinearLayout>

            <com.qianfeng.wowsai.view.custom.ScllorTabView
                    android:id="@+id/scllorTabView_tab_underline"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/white"
                    />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCC"
                    />

        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_campaindetail_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

</LinearLayout>