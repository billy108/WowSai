<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/length_10"
            android:paddingBottom="@dimen/length_15"
            android:paddingTop="@dimen/length_10"
            android:paddingRight="@dimen/length_10"
            android:orientation="horizontal"
            android:id="@+id/item_daren_user_container"
            >
        <com.qianfeng.wowsai.view.custom.CircleImageView
                android:id="@+id/imageview_daren_head"
                android:layout_width="@dimen/length_40"
                android:layout_height="@dimen/length_40"
                />
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/length_10"
                >
            <TextView
                    android:id="@+id/item_daren_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_daren_username"
                    android:layout_alignParentTop="true"
                    />
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    >
                <TextView
                        android:id="@+id/item_daren_course_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_daren_count"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/courseAnd"
                        android:textSize="@dimen/txt_daren_count"
                        />
                <TextView
                        android:id="@+id/item_daren_circle_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_daren_count"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/msg_handCircle"
                        android:textSize="@dimen/txt_daren_count"
                        />
            </LinearLayout>
        </RelativeLayout>
        <ImageView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/sgk_icon_attention_no_list"
                android:layout_gravity="center_vertical"
                />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/length_10"
            >
        <ImageView
                android:id="@+id/item_daren_course1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/length_2"
                android:scaleType="centerCrop"
                />
        <View
                android:layout_width="@dimen/length_2"
                android:layout_height="match_parent"
                android:background="@color/white"
                />
        <ImageView
                android:id="@+id/item_daren_course2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/length_2"
                android:scaleType="centerCrop"
                />
        <View
                android:layout_width="@dimen/length_2"
                android:layout_height="match_parent"
                android:background="@color/white"
                />
        <ImageView
                android:id="@+id/item_daren_course3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                />
    </LinearLayout>
</LinearLayout>