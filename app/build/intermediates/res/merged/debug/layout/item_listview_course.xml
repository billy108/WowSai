<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
        >

    <LinearLayout
            android:id="@+id/linearLayout_search_course"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            >

        <ImageView
                android:id="@+id/imageView_search_course_pic"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher"
                android:layout_margin="10dp"
                />

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

            <TextView
                    android:id="@+id/textView_search_course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="芒果娃娃"
                    />

            <TextView
                    android:id="@+id/textView_search_course_user"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by 一剪梅"
                    android:maxLines="2"
                    />
        </RelativeLayout>

        <TextView
                android:id="@+id/textView_search_course_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="2015-04-12"
                android:padding="10dp"
                />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

    <LinearLayout
            android:id="@+id/linearLayout_search_course_more"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/tab_click"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="查看更多"
                android:textSize="@dimen/txt_size_m"
                android:gravity="center"
                />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                />
    </LinearLayout>

</LinearLayout>