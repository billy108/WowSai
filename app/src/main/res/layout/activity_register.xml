<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/listGap"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/TitleHeight"
            >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="注册"
                android:textSize="@dimen/txt_size_l"
                android:textColor="@color/white"
                android:background="@color/red"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/TitleHeight"
            android:background="@color/white"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="手机号码:"
                android:textSize="@dimen/txt_size_m"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                />

        <EditText
                android:id="@+id/editText_register_phoneNum"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:maxLength="11"
                />
    </LinearLayout>

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >

        <TextView
                android:id="@+id/textView_register_getCode"
                android:clickable="false"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/code2"
                android:text="点击获取验证码"
                android:textSize="@dimen/txt_size_l"
                />
    </RelativeLayout>

    <EditText
            android:id="@+id/editText_register_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:paddingLeft="15dp"
            android:inputType="number"
            android:maxLength="6"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/TitleHeight"
            android:background="@color/white"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="密码:"
                android:textSize="@dimen/txt_size_m"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                />

        <EditText
                android:id="@+id/editText_register_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码请输入6-24位数字或字母"
                android:paddingLeft="15dp"
                android:inputType="textPassword"
                android:maxLength="24"
                />
    </LinearLayout>

    <Button
            android:id="@+id/btn_register_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="注册账号"
            android:textSize="@dimen/txt_size_l"
            android:textColor="@color/white"
            android:background="@drawable/loginbtn"
            android:layout_margin="15dp"
            android:enabled="false"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/txt_size_m"
                android:text="已有账号,去"
                />

        <TextView
                android:id="@+id/textView_register_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="登录"
                android:textSize="@dimen/txt_size_m"
                android:clickable="true"
                />
    </LinearLayout>

</LinearLayout>