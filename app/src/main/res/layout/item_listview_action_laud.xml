<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.qianfeng.wowsai"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/listGap"
        >

    <LinearLayout
            android:layout_width="@dimen/length_60"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

        <com.qianfeng.wowsai.view.custom.CircleImageView
                android:id="@+id/img_action_laud_head"
                android:layout_width="@dimen/length_40"
                android:layout_height="@dimen/length_40"
                app:border_color="@color/white"
                app:border_width="@dimen/length_1"
                />
        <View
                android:layout_width="@dimen/length_1"
                android:layout_height="match_parent"
                android:background="@color/gray"
                />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/length_10"
            android:paddingBottom="@dimen/length_10"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/length_10"
                >
            <TextView
                    android:id="@+id/tv_action_laud_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_size_content"
                    />
            <TextView
                    android:id="@+id/tv_action_laud_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/txt_size_content"
                    />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_action_laud_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/length_10"
                android:paddingTop="@dimen/length_10"
                android:paddingLeft="@dimen/length_5"
                android:paddingRight="@dimen/length_5"
                android:background="@drawable/action_shape"
                >
            <ImageView
                    android:id="@+id/img_action_laud_cover"
                    android:layout_width="@dimen/length_100"
                    android:layout_height="@dimen/length_100"
                    android:scaleType="centerCrop"
                    />
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                <TextView
                        android:id="@+id/tv_action_laud_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="4"
                        android:textSize="@dimen/txt_size_content"
                        />
                <com.qianfeng.wowsai.view.custom.CircleImageView
                        android:id="@+id/img_action_circle_head"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        />
                <TextView
                        android:id="@+id/tv_action_laud_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkGray"
                        android:textSize="@dimen/txt_size_content"
                        android:layout_toLeftOf="@id/img_action_circle_head"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/length_5"
                        />
            </RelativeLayout>
        </LinearLayout>
        <TextView
                android:id="@+id/tv_action_laud_timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_user_s"
                android:textColor="@color/lightGray"
                android:layout_marginTop="@dimen/length_10"
                />
    </LinearLayout>

</LinearLayout>