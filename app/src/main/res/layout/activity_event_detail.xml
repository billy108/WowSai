<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/TitleHeight"
            android:background="@color/titleBg"
            android:orientation="horizontal"
            >

        <ImageView
                android:id="@+id/activity_event_detail_title_write"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/base_publish"
                android:layout_marginLeft="15dp"
                />

        <TextView
                android:id="@+id/activity_event_detail_title_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="活动作品"
                android:textSize="@dimen/txt_size_l"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                />

        <ImageView
                android:id="@+id/activity_event_detail_title_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/base_search"
                android:layout_marginRight="15dp"
                />
    </LinearLayout>


    <ScrollView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none"
            >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                <com.qianfeng.wowsai.view.custom.CircleImageView
                        android:id="@+id/activity_event_detail_userHead"
                        android:layout_width="@dimen/length_50"
                        android:layout_height="@dimen/length_50"
                        android:layout_margin="@dimen/length_10"
                        android:src="@drawable/sgk_icon_courseclassify_defaul"
                        />

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/activity_event_detail_userHead"
                        >

                    <TextView
                            android:id="@+id/activity_event_detail_userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="喋喋不休"
                            android:layout_marginTop="@dimen/length_20"
                            android:layout_marginBottom="@dimen/length_10"
                            android:textColor="@color/red"
                            />

                    <TextView
                            android:id="@+id/activity_event_detail_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可以吃的冰块"
                            android:layout_marginBottom="@dimen/length_10"
                            />

                    <ImageView
                            android:id="@+id/activity_event_detail_photo"
                            android:layout_width="@dimen/length_100"
                            android:layout_height="@dimen/length_150"
                            android:scaleType="fitXY"
                            android:src="@drawable/sgk_img_default_big"
                            />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                        <TextView
                                android:id="@+id/activity_event_detail_addTime"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/length_10"
                                android:text="2小时前"
                                />

                        <TextView
                                android:id="@+id/activity_event_detail_collect"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/length_10"
                                android:drawableLeft="@drawable/sgk_detail_collect"
                                android:text=" 收藏"
                                android:gravity="bottom"
                                />

                        <TextView
                                android:id="@+id/activity_event_detail_laud"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/length_10"
                                android:drawableLeft="@drawable/sgk_detail_laud"
                                android:text=" 赞"
                                android:gravity="bottom"
                                />
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/sgk_curriculum_discussitem_bg1"
                    android:layout_margin="10dp"
                    >


                <LinearLayout
                        android:id="@+id/noUseLinearLayout1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/length_10"
                        >

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="活动名称："
                            />

                    <TextView
                            android:id="@+id/activity_event_detail_eventName"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:singleLine="true"
                            />

                    <ImageView
                            android:id="@+id/activity_event_detail_eventDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sgk_order_bt_right_triangle"
                            android:layout_gravity="right"
                            />
                </LinearLayout>

                <RelativeLayout
                        android:id="@+id/noUseRelativeLayout1"
                        android:layout_below="@id/noUseLinearLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="@dimen/length_30"
                        android:layout_marginLeft="@dimen/length_30"
                        android:layout_marginTop="@dimen/length_1"
                        android:layout_marginBottom="@dimen/length_10"
                        >

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sgk_list_vote_icon"
                            android:layout_marginRight="@dimen/length_10"
                            android:layout_marginLeft="@dimen/length_10"
                            />

                    <TextView
                            android:id="@+id/activity_event_detail_eventVote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/light_orange"
                            android:text="25"
                            android:textSize="@dimen/txt_size_l"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/length_30"
                            />
                </RelativeLayout>

                <TextView
                        android:id="@+id/noUseTextView1"
                        android:layout_below="@id/noUseRelativeLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/length_2"
                        android:background="@color/white"
                        />

                <RelativeLayout
                        android:id="@+id/noUseRelativeLayout2"
                        android:layout_below="@id/noUseTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/length_10"
                        >

                    <TextView
                            android:id="@+id/activity_event_detail_laudNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/sgk_detail_lauded"
                            android:text="29"
                            />

                    <com.qianfeng.wowsai.view.custom.MyGridView
                            android:id="@+id/activity_event_detail_laudPerson"
                            android:layout_toRightOf="@id/activity_event_detail_laudNum"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:numColumns="8"
                            android:listSelector="#00000000"
                            android:cacheColorHint="#00000000"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:overScrollMode="always"
                            android:columnWidth="@dimen/length_5"
                            android:verticalSpacing="@dimen/length_5"
                            />
                </RelativeLayout>

                <TextView
                        android:id="@+id/noUseTextView2"
                        android:layout_below="@id/noUseRelativeLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/length_2"
                        android:background="@color/white"
                        />

                <RelativeLayout
                        android:id="@+id/noUseRelativeLayout3"
                        android:layout_below="@id/noUseTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                    <TextView
                            android:id="@+id/activity_event_detail_commentNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/sgk_list_comment_icon"
                            android:text="29"
                            />

                    <ListView
                            android:id="@+id/activity_event_detail_commentPerson"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/activity_event_detail_commentNum"
                            />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/TitleHeight"
            android:orientation="horizontal"
            android:background="@color/lightGray"
            >
        <ImageView
                android:id="@+id/activity_event_detail_bottom_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/sgk_back_arrow"
                android:layout_marginLeft="@dimen/length_15"
                />

        <EditText
                android:id="@+id/activity_event_detail_bottom_editText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_m"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:hint="发表评论..."
                android:textColorHint="@color/gray"
                android:background="@drawable/shape_stoke_red"
                android:layout_margin="@dimen/length_5"
                android:paddingTop="@dimen/length_5"
                android:paddingBottom="@dimen/length_5"
                android:paddingLeft="@dimen/length_10"
                android:paddingRight="@dimen/length_10"
                />

        <ImageView
                android:id="@+id/activity_event_detail_bottom_send"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/sgk_send"
                android:layout_marginRight="@dimen/length_15"
                />
    </LinearLayout>
</LinearLayout>