<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/listGap"
        >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/TitleHeight"
                android:background="@color/red"
                >

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/txt_size_l"
                        android:textColor="@color/white"
                        android:text="@string/msg_login"
                        android:gravity="center"
                        />
        </LinearLayout>

        <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <EditText
                        android:id="@+id/editText_login_userName"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/login_userName"
                        android:drawableLeft="@drawable/sgk_icon_user_login"
                        />

                <EditText
                        android:id="@+id/editText_login_pwd"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/login_pwd"
                        android:inputType="textPassword"
                        android:drawableLeft="@drawable/sgk_icon_password_login"
                        />
        </LinearLayout>


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />

        <Button
                android:id="@+id/btn_login_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/msg_login"
                android:textSize="@dimen/txt_size_l"
                android:textColor="@color/white"
                android:background="@drawable/loginbtn"
                android:layout_margin="15dp"
                />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                        android:id="@+id/textView_login_register"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/login_register"
                        android:layout_marginLeft="15dp"
                        />

                <TextView
                        android:id="@+id/textView_login_forget"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="@string/login_forget"
                        android:layout_marginRight="15dp"
                        />
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                                android:id="@+id/textView_login_weibo"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/sgk_icon_weibo"
                                android:text="@string/login_weibo"
                                android:gravity="center"
                                android:padding="15dp"
                                android:clickable="true"
                                />

                        <TextView
                                android:id="@+id/textView_login_qq"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/sgk_icon_qq"
                                android:text="@string/login_qq"
                                android:gravity="center"
                                android:padding="15dp"
                                android:clickable="true"
                                />

                        <TextView
                                android:id="@+id/textView_login_weixin"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/sgk_icon_weixin"
                                android:text="@string/login_weixin"
                                android:gravity="center"
                                android:padding="15dp"
                                android:clickable="true"
                                />
                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:gravity="center"
                        android:text="@string/login_more"
                        />
        </LinearLayout>
</LinearLayout>