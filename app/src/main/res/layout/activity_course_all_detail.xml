<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >

    <android.support.v4.view.ViewPager
            android:id="@+id/activity_course_all_detail_viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#4fff"
            >

    </android.support.v4.view.ViewPager>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/BaseTabHeight"
            android:background="@color/white"
            android:baselineAligned="true"
            >

        <LinearLayout
                android:id="@+id/activity_course_all_detail_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sgk_back_arrow"

                    />
        </LinearLayout>

        <RelativeLayout
                android:id="@+id/activity_course_all_detail_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >
            <TextView
                    android:id="@+id/activity_course_all_detail_comment_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginLeft="@dimen/length_10"
                    android:layout_marginTop="@dimen/length_2"
                    android:textColor="@color/red"
                    android:gravity="center"
                    android:background="@drawable/sgk_course_commnet"
                    />
        </RelativeLayout>
        <LinearLayout
                android:id="@+id/activity_course_all_detail_collect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >
            <ImageView
                    android:id="@+id/activity_course_all_detail_collectImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab_collect"

                    />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/activity_course_all_detail_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sgk_course_shared"
                    />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>