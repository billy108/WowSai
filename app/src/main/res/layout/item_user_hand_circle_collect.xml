<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <com.qianfeng.wowsai.view.custom.CircleImageView
                android:id="@+id/item_user_hand_circle_collect_userHead"
                android:layout_width="@dimen/length_40"
                android:layout_height="@dimen/length_40"
                android:layout_margin="@dimen/length_10"
                android:src="@drawable/sgk_icon_courseclassify_defaul"
                />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:padding="@dimen/length_5"
                android:layout_toRightOf="@id/item_user_hand_circle_collect_userHead"
                >

            <TextView
                    android:id="@+id/item_user_hand_circle_collect_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="喋喋不休"
                    android:layout_marginTop="@dimen/length_20"
                    android:layout_marginBottom="@dimen/length_10"
                    android:textColor="@color/red"
                    />

            <TextView
                    android:id="@+id/item_user_hand_circle_collect_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可以吃的冰块"
                    android:layout_below="@id/item_user_hand_circle_collect_userName"
                    android:layout_alignParentLeft="true"
                    />

            <com.qianfeng.wowsai.view.custom.MyGridView
                    android:id="@+id/item_user_hand_circle_collect_gridView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="3"
                    android:horizontalSpacing="@dimen/length_5"
                    android:verticalSpacing="@dimen/length_5"
                    android:listSelector="#00000000"
                    android:cacheColorHint="#00000000"
                    android:gravity="top"
                    android:layout_gravity="top"
                    android:columnWidth="@dimen/length_20"
                    android:overScrollMode="always"
                    android:layout_below="@id/item_user_hand_circle_collect_content"
                    android:layout_alignParentLeft="true"
                    />
            <TextView
                    android:id="@+id/item_user_hand_circle_collect_addTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2小时前"
                    android:layout_below="@id/item_user_hand_circle_collect_gridView"
                    />


        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>