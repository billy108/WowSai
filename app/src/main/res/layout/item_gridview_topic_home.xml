<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
        >

    <LinearLayout
            android:id="@+id/linearLayout_item_topicHome_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/imgMargin"
                >
            <ImageView
                    android:id="@+id/imageView_item_topicHome_pic0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/imgMargin"
                    >
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                    <ImageView
                            android:id="@+id/imageView_item_topicHome_pic1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/imgMargin"
                        >
                    <ImageView
                            android:id="@+id/imageView_item_topicHome_pic2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                    <ImageView
                            android:id="@+id/imageView_item_topicHome_pic3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/imgMargin"
                        >
                    <ImageView
                            android:id="@+id/imageView_item_topicHome_pic4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/topicTitlePadding"
            android:gravity="center"
            >
        <TextView
                android:id="@+id/textView_item_topicHome_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/smallSizeColor"
                />
    </LinearLayout>
        

</LinearLayout>